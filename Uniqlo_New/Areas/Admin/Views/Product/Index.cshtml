@using Uniqlo_New.Models
@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<table class="table table-striped table-white w-75 m-auto">
	<thead>
		<tr>

			<th  scope="col" >#</th>
			<th  scope="col" >Image</th>
			<th  scope="col" >Name</th>
			<th  scope="col" >Category</th>
			<th  scope="col" >CostPrice</th>
			<th  scope="col" >SellPrice</th>
			<th  scope="col" >Discount</th>
			<th  scope="col" >Quantity</th>
			<th  scope="col" >Stock Count</th>

			<th  colspan="3">Action</th>

		</tr>
	</thead>
	<form method="post">
	<tbody>
			@foreach (var item in Model)
			{
			<tr>
				<td>@item.Id</td>
				<td><img src="~/imgs/products/@item.CoverImage" width="80" /></td>
				<td>@item.Name</td>
				<td>@item.Category?.Name</td>
				<td>@item.SellPrice</td>
				<td>@item.CostPrice</td>
				<td>@item.Discount</td>
				<td>@item.Quantity</td>




				<td><a class="btn btn-outline-success" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
				<td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>




			</tr>


			}
	</tbody>
	</form>

	<a type="button" class="btn btn-primary mb--15" asp-action="Create">Create</a>
</table>

