@using Uniqlo_New.Models
@model List<Category>
@{
	ViewData["Title"] = "Index";
}

<table class="table table-striped table-dark w-75 m-auto">
	<thead>
		<tr>

			<th class="text-center" scope="col" colspan="2">Name</th>

		</tr>
	</thead>
	<form method="post">
	<tbody>
			@foreach (var item in Model)
			{
			<tr>

				<td>@item.Name</td>


				<td><a class="btn btn-outline-success" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
				<td><a class="btn btn-outline-danger" asp-controller="Category"   asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>




			</tr>


			}
	</tbody>
	</form>

	<a type="button" class="btn btn-primary mb--15" asp-action="Create">Create</a>
</table>


