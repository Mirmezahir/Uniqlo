@using Uniqlo_New.Models
@using Uniqlo_New.ViewModels.Categories
@model List<Sliders>
@{
    ViewData["Title"] = "Index";
}


<table class="table table-striped table-white w-75 m-auto">
	<thead>
		<tr>

			<th class="text-center" scope="col" colspan="1">Image</th>
			<th class="text-center" scope="col" colspan="1">Title</th>
			<th class="text-center" scope="col" colspan="1">Subtitle</th>
			<th class="text-center" scope="col" colspan="1">Link</th>
			<th class="text-center" scope="col" colspan="1">Create Time</th>
			<th class="text-center" scope="col" colspan="3">Action</th>

		</tr>
	</thead>
	<form method="post">
	<tbody>
			@foreach (var item in Model)
			{
			<tr>
				<td><img src="~/imgs/sliders/@item.ImageUrl" width="50" /></td>
				<td>@item.Title</td>
				<td>@item.Subtitle</td>
				<td>@item.Link</td>
				<td>@item.CreateTime</td>




				<td><a class="btn btn-outline-success" href="/@item.Id">Update</a></td>
				<td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>




			</tr>


			}
	</tbody>
	</form>

	<a type="button" class="btn btn-primary mb--15" href="/admin/slider/create">Create</a>
</table>


